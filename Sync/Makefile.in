# $Id$
# -----------------------------------------------------------------------------

.SUFFIXES	= .o .c .C

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@/Sync
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJROOT_ABS	= @VJROOT_ABS@
VJ_SRCDIR	= @VJ_SRCDIR@/Sync
WORKDIR		= ${topdir}/Sync

# Include commom definitions
include @topdir@/Makefile.base


#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------



# ---- Determine what objects to use ----
ifeq (@SYNC_SYS@,POSIX)
	DEPEND_SRCS = 
else
	DEPEND_SRCS = vjMutexSGI.C vjSemaphoreSGI.C
endif

SYNC_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

LIBRARY		= libJuggler

@SET_MAKE@

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------

default: all

all dbg opt dso ddso obj: ${SYNC_OBJECTS}

install:
	${top_srcdir}/mkinstalldirs ${includedir}
	cp ${srcdir}/*.h ${includedir}

depend: .depend_done

# This target will allow the 'depend' target to be built only once.
.depend_done:
	cd ${srcdir} &&							\
          makedepend -f${WORKDIR}/Makefile -p'$${OBJDIR}/'     	\
              ${DEPENDFLAGS} -- ${DEPEND_EXTRAS} -- ${DEPEND_SRCS} &&	\
          touch ${WORKDIR}/.depend_done

newdepend:
	rm .depend_done && ${MAKE} depend


# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f .depend_done Makedepend ${SYNC_OBJECTS} *.o core so_locations

