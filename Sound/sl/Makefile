SRCS = SlSound.cpp SlSoundEngine.cpp SlSoundEngineCreator.cpp
PROJECT_NAME = soundengine_sl
OBJDIR = object_code

include ../Makefile.base
include ../Makefile.rec
include ../Makefile.dep

# Include dependencies generated by make automatically.
ifndef NO_DEPEND
	include ${DEPEND_FILES}
endif


# Do any pre init stuff that has to happen before build rules 
#  are processed
# Check that everything is defined before making.
prebuild:
	@if ! [ -d ${OBJDIR} ]; then									 \
		echo "";															  \
		echo "-------------------------------------------" ;	\
		echo "Creating directory \"${OBJDIR}\" ..." ;			\
		echo "-------------------------------------------" ;	\
		mkdir ${OBJDIR} ;												 \
	fi

# Compile then Link
build: $(OBJS)
	-@echo ""
	-@echo "-------------------------------------------"
	-@echo "Linking... (.$(OBJ_FILE_SUFFIX)'s --> .so)"
	-@echo "-------------------------------------------"
	$(SO_LINKER) $(SO_FLAGS) $(OBJS) $(OUTPUT_LIB) $(LIB_PATHS) $(LIBS) 
	-@echo ""
	-@echo "-------------------------------------------"
	-@echo "$(LIB_FILENAME) done"
	-@echo "-------------------------------------------"

