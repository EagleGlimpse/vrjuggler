# -----------------------------------------------------------------------------
# Build targets.
# -----------------------------------------------------------------------------
default: TestSuite

SUBDIRS	= TestSuite	\
          CfgTest	\
          Math		\
          Matrix	\
          Performance	\
          Quat		\
          Sync		\
          input		\
          threads

all: $(SUBDIRS)

$(SUBDIRS)::
	cd $@ && $(MAKE) all

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	@for dir in $(SUBDIRS) ; do			\
            echo "==> Cleaning in $$dir"       ;	\
            cd $$dir && $(MAKE) clean && cd .. ;	\
        done
