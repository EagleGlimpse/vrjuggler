# -----------------------------------------------------------------------------
# Makefile.in for juggler/GUI.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------
JAVA_TARGETS	= config.jar

default: $(JAVA_TARGETS)

# Include common definitions.
include @topdir@/make.defs.mk

srcdir	= @srcdir@

# JDK-related variables.  $(JAVAC_CMD) is the compile line for javac when
# building .java files.
JDK_HOME	= @JDK_HOME@
JAR		= @JAR@
JAVAC		= @JAVAC@
JAXP_JAR = @JAXP_JAR@
JAVAC_CMD	= $(JAVAC) -d . -sourcepath $(srcdir) -classpath $(JAXP_JAR)
JAVADOC		= $(JAVAC:javac=javadoc)

DOC_DIR		= $(HOME)/public_html/jackal/api

# Prevent anything in this file from being built in parallel.
MAKEFLAGS	+= -j 1

# Search path information.
vpath
vpath %.java @srcdir@
vpath %.class .

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
# there's no way to append to a jar file, so this must all be done in one
# step.  This is incredibly stupid...
config.jar:
	$(JAVAC_CMD) $(srcdir)/org/vrjuggler/jccl/config/*.java
	$(JAR) cv0f $@ org/vrjuggler/jccl/config/*.class

# -----------------------------------------------------------------------------
# Documentation.
# -----------------------------------------------------------------------------
doc:
	$(MKINSTALLDIRS) $(DOC_DIR)
	$(JAVADOC) -d $(DOC_DIR) -private -sourcepath $(srcdir)		\
				org.vrjuggler.jccl.config

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= \
	org/vrjuggler/jccl/config/*.class

CLOBBER_FILES += \
	config.jar
