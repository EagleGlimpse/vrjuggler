# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/input
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@:@srcdir@/../../Input/vjPosition

# These test programs require the following libraries to be linked:
#
#     -lGLU -lGL -lXext -lXmu -lX11 -lm -lC
#
# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS_BASIC@ @TEST_EXTRA_LIBS_GL@

PROGS		= go go-ibox go-inputgroup go-logiclass aFlockTest vjFlockTest

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: $(PROGS)

# ----------------
# aFlock test driver
# ----------------
aFlockTest: aFlockTest.o aFlock.o
	$(LINK) -o $@ aFlockTest.o aFlock.o 

# ----------------
# vjFlock test driver
# ----------------
vjFlockTest: vjFlockTest.o
	$(LINK) -o $@ vjFlockTest.o $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# new
# ----------------
new: new.o
	$(LINK) -o $@ new.o $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go
# ----------------
go: main.o
	$(LINK) -o $@ main.o $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-ibox
# ----------------
go-ibox: main-ibox.o
	$(LINK) -o $@ main-ibox.o $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-inputgroup
# ----------------
go-inputgroup: main-inputgroup.o
	$(LINK) -o $@ main-inputgroup.o $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-logiclass
# ----------------
go-logiclass: main-logiclass.o
	$(LINK) -o $@ main-logiclass.o $(VJ_LIBS) $(EXTRA_LIBS)

.cpp.o:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend $(PROGS) *.exe *.ilk *.o *core *.?db so_locations
	rm -rf ./ii_files
