# -----------------------------------------------------------------------------
# Makefile.in for c2lib/Input
# $Id$
# -----------------------------------------------------------------------------

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJROOT_ABS	= @VJROOT_ABS@
VJ_SRCDIR	= @VJ_SRCDIR@/Input
WORKDIR		= ${topdir}/Input

# Include commom definitions
include @topdir@/Makefile.base


#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------


LIBRARY		= libJuggler
SUBDIRS		= vjGlove vjInput vjPosition InputManager ibox

@SET_MAKE@

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------

default: all

all-recursive install-recursive dbg-recursive opt-recursive		\
dso-recursive ddso-recursive obj-recursive depend-recursive		\
newdepend-recursive:
	@set fnord ${MAKEFLAGS}; amf=$$2;				\
            list='${SUBDIRS}';						\
            for subdir in $$list; do					\
                target=`echo $@ | sed s/-recursive//`;			\
                echo "Making $$target in Input/$$subdir";		\
                (cd $$subdir && ${MAKE} OPTIMIZER="${OPTIMIZER}"	\
                                    OBJDIR=${OBJDIR} $$target)		\
                    || case "$$amf" in					\
                         *=*) exit 1;;					\
                         *k*) fail=yes;;				\
                         *) exit 1;; esac;				\
            done && test -z "$$fail"

dbg: dbg-recursive

opt: opt-recursive

dso: dso-recursive

ddso: ddso-recursive

obj: obj-recursive

depend: depend-recursive

newdepend: newdepend-recursive

all: dbg opt dso ddso

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean-recursive:
	@set fnord ${MAKEFLAGS}; amf=$$2;		\
            rev=''; list='${SUBDIRS}';			\
            for subdir in $$list; do			\
                rev="$$subdir $$rev";			\
            done;					\
            for subdir in $$rev; do			\
                target=`echo $@ | sed s/-recursive//`;	\
                echo "Making $$target in $$subdir";	\
                (cd $$subdir && ${MAKE} $$target)	\
                    || case "$$amf" in			\
                         *=*) exit 1;;			\
                         *k*) fail=yes;;		\
                         *) exit 1;;			\
                       esac;				\
            done && test -z "$$fail"

clean: clean-recursive

clobber: clean
