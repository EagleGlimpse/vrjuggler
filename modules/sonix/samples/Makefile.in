
# project name...
PROJECT_NAME = sample

OBJECTS		= main.@OBJEXT@
APP_INCLUDES	= @application_includes@
APP_LIBS		= @application_libs@
APP_LDFLAGS		= @application_ldflags@
VPATH		= @srcdir@

########################################################################3
.SUFFIXES: .cpp .@OBJEXT@

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@ $(APP_LDFLAGS)


# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: sample@EXEEXT@

sample@EXEEXT@: $(OBJECTS)
	$(LINK) @EXE_NAME_FLAG@ $(OBJECTS) $(APP_LIBS)

.cpp.@OBJEXT@:
	$(COMPILE) $(APP_INCLUDES) @OBJ_NAME_FLAG@ $<
	
# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -rf Makedepend sample@EXEEXT@ sample.ilk ii_files $(OBJECTS) *core \
          so_locations *.?db

clobber: clean
	rm -rf ./ii_files

