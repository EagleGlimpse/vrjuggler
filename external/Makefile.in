MAKEFLAGS+=		--no-print-directory
MKINSTALLDIRS=		$(scriptdir)/mkinstalldirs
PERL=			@PERL@
RM_LN=			@RM_LN@

BASE_TARGETS=		doozer
TARGETS=		cppdom boost gmtl @TARGETS@
