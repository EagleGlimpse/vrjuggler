OMNIORB_CMDS=		@OMNIORB_CMDS@
PYTHON_DIR=		@PYTHON_DIR@
PYTHON_PKG_DIR=		$(PYTHON_DIR)/site-packages

CXX_ORB_BIN_PATH=	$(subst $(CXX_ORB_ROOT),,$(CXX_ORB_BIN_DIR))
CXX_ORB_LIB_PATH=	$(subst $(CXX_ORB_ROOT),,$(CXX_ORB_LIB_DIR))

