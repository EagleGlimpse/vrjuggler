# -----------------------------------------------------------------------------
# Makefile.in for juggler/GUI.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: VjControl.jar

# Include common definitions.
include @topdir@/make.defs.mk

srcdir	= @srcdir@

# JDK-related variables.  $(JAVAC_CMD) is the compile line for javac when
# building .java files.
JDK_HOME	= @JDK_HOME@
JAR		= @JAR@
JAVAC		= @JAVAC@
JAVAC_CMD	= $(JAVAC) -d . -sourcepath $(srcdir)
JAVADOC		= $(JAVAC:javac=javadoc)

DOC_DIR		= $(HOME)/public_html/vjcontrol

# Prevent anything in this file from being built in parallel.
MAKEFLAGS	+= -j 1

# Include the .mk files for VjConfig and VjGUI so that the Java code in those
# directories can be built using this Makefile.
include ${srcdir}/VjConfig/VjConfig.mk
include ${srcdir}/VjControl/VjControl.mk
include ${srcdir}/VjComponents/UI/UI.mk
include ${srcdir}/VjComponents/UI/Widgets/Widgets.mk
include ${srcdir}/VjComponents/Network/Network.mk
include ${srcdir}/VjComponents/ConfigEditor/ConfigEditor.mk
include ${srcdir}/VjComponents/ConfigEditor/ChunkDescUI/ChunkDescUI.mk
include ${srcdir}/VjComponents/ConfigEditor/ConfigChunkUI/ConfigChunkUI.mk
include ${srcdir}/VjComponents/PerfMonitor/PerfMonitor.mk
include ${srcdir}/VjWizards/VjWizards.mk

# Search path information.
vpath
vpath %.java @srcdir@
vpath %.class .

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
JAVA_TARGETS	= VjControl.jar

# there's no way to append to a jar file, so this must all be done in one
# step.  This is incredibly stupid...
VjControl.jar: 	${VJCONFIG_SOURCES} \
                ${VJCONTROL_SOURCES} \
                ${UI_SOURCES}		\
                ${VJCUIUTIL_SOURCES}	\
                ${VJCNETWORK_SOURCES}	\
                ${VJCCONF_SOURCES}	\
                ${CHUNKDESCUI_SOURCES}	\
                ${CONFIGCHUNKUI_SOURCES}	\
                ${VJCPERF_SOURCES}	\
                ${VJWIZARDS_SOURCES}	\
                ${srcdir}/contents.config
	${JAVAC_CMD} ${srcdir}/VjConfig/*.java \
	             ${srcdir}/VjControl/*.java \
	             ${srcdir}/VjComponents/UI/*.java \
	             ${srcdir}/VjComponents/UI/*/*.java \
	             ${srcdir}/VjComponents/Network/*.java \
	             ${srcdir}/VjComponents/ConfigEditor/*.java \
	             ${srcdir}/VjComponents/ConfigEditor/*/*.java \
	             ${srcdir}/VjComponents/PerfMonitor/*.java \
	             ${srcdir}/VjWizards/*.java 
	${JAR} cv0f VjControl.jar VjConfig/*.class VjControl/*.class \
	            VjComponents/*/*.class VjComponents/*/*/*.class \
	            VjWizards/*.class -C ${srcdir} VjWizards/gfx \
	            -C ${srcdir} VjWizards/data \
	            -C ${srcdir} VjFiles -C ${srcdir} contents.config


# -----------------------------------------------------------------------------
# Documentation.
# -----------------------------------------------------------------------------
doc:
	$(MKINSTALLDIRS) $(DOC_DIR)
	$(JAVADOC) -d $(DOC_DIR) -private -sourcepath $(srcdir)		\
	    VjControl VjConfig VjComponents.ConfigEditor		\
	    VjComponents.ConfigEditor.ConfigChunkUI			\
	    VjComponents.ConfigEditor.ChunkDescUI			\
	    VjComponents.UI VjComponents.UI.Widgets			\
	    VjComponents.PerfMonitor VjComponents.Network		\
	    VjWizards

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= VjConfig/*.class VjConfig/*~ VjControl/*.class	\
                   VjControl/*~ VjComponents/*/*.class			\
                   VjComponents/*/*~ VjComponents/*/*/*.class		\
                   VjComponents/*/*/*~
CLOBBER_FILES	+= VjControl.jar
