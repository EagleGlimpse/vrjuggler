# -----------------------------------------------------------------------------
# Makefile.in for c2lib/test
# $Id$
# -----------------------------------------------------------------------------

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
C2ROOT		= ${top_srcdir}
C2ROOT_ABS	= @C2ROOT_ABS@
C2_SRCDIR	= @C2_SRCDIR@/test
WORKDIR		= ${topdir}/test

CC		= @CC@
CXX		= @CXX@
CPP		= @CPP@
CXXCPP		= @CXXCPP@
CFLAGS		= @CFLAGS@ ${OPTIMIZER}
CPPFLAGS	= @CPPFLAGS@
CXXFLAGS	= @CXXFLAGS@ ${OPTIMIZER}
DEFS		= @DEFS@
DEPENDFLAGS	= @DEPENDFLAGS@ @INCLUDES@ -I${C2ROOT_ABS} -I${topdir}
DEPEND_EXTRAS	= @DEPEND_EXTRAS@ ${DEFS}
INCLUDES	= @INCLUDES@ -I${C2ROOT} -I${topdir}
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
OBJDIR		= .
VPATH		= @srcdir@

SUBDIRS		= CfgTest input ogl pfNav

@SET_MAKE@

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------

default: all

all-recursive install-recursive depend-recursive newdepend-recursive:
	@set fnord ${MAKEFLAGS}; amf=$$2;				\
            list='${SUBDIRS}';						\
            for subdir in $$list; do					\
                target=`echo $@ | sed s/-recursive//`;			\
                echo "Making $$target in test/$$subdir";		\
                (cd $$subdir && ${MAKE} OPTIMIZER="${OPTIMIZER}"	\
                                    OBJDIR=${OBJDIR} $$target)		\
                    || case "$$amf" in					\
                         *=*) exit 1;;					\
                         *k*) fail=yes;;				\
                         *) exit 1;; esac;				\
            done && test -z "$$fail"

all: all-recursive

depend: depend-recursive

newdepend: newdepend-recursive

CfgTest input ogl pfNav:
	@set fnord ${MAKEFLAGS}; amf=$$2;				\
            list=$@;							\
            for subdir in $$list; do					\
                target=`echo $@ | sed s/-recursive//`;			\
                echo "Making $$target in test/$$subdir";		\
                (cd $$subdir && ${MAKE} OPTIMIZER="${OPTIMIZER}"	\
                                    OBJDIR=${OBJDIR} $$target)		\
                    || case "$$amf" in					\
                         *=*) exit 1;;					\
                         *k*) fail=yes;;				\
                         *) exit 1;; esac;				\
            done && test -z "$$fail"

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean-recursive:
	@set fnord ${MAKEFLAGS}; amf=$$2;		\
            rev=''; list='${SUBDIRS}';			\
            for subdir in $$list; do			\
                rev="$$subdir $$rev";			\
            done;					\
            for subdir in $$rev; do			\
                target=`echo $@ | sed s/-recursive//`;	\
                echo "Making $$target in $$subdir";	\
                (cd $$subdir && ${MAKE} $$target)	\
                    || case "$$amf" in			\
                         *=*) exit 1;;			\
                         *k*) fail=yes;;		\
                         *) exit 1;;			\
                       esac;				\
            done && test -z "$$fail"

clean: clean-recursive

clobber: clean
