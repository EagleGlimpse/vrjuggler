# $Id$
# -----------------------------------------------------------------------------

.SUFFIXES	=

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJROOT_ABS	= @VJROOT_ABS@
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/GL
WORKDIR		= ${topdir}/Kernel/GL

# Include commom definitions
include @topdir@/Makefile.base


#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

OGL_API := @OPENGL_API@

OGL_SRCS 	:= vjGlAPIFactory.C \
		   vjGlDrawManager.C \
		   vjGlPipe.C \
		   vjGlWindow.C 
		   
    
DEPEND_SRCS	:= 

ifeq ($(OGL_API),Y)
	DEPEND_SRCS += $(OGL_SRCS)
endif

GL_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

LIBRARY		= libJuggler

@SET_MAKE@

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------

default: all

all dbg opt dso ddso obj: ${GL_OBJECTS}


depend: .depend_done

newdepend:
	rm .depend_done && ${MAKE} depend

# This target will allow the 'depend' target to be built only once.
.depend_done:
	cd ${srcdir} &&							\
          makedepend -f${WORKDIR}/Makefile -p'$${OBJDIR}/'		\
              ${DEPENDFLAGS} -- ${DEPEND_EXTRAS} -- ${DEPEND_SRCS} &&	\
          touch ${WORKDIR}/.depend_done

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f .depend_done Makedepend ${GL_OBJECTS} *.o core so_locations

