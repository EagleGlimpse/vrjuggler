<?xml version="1.0" encoding="UTF-8"?>
<?org-vrjuggler-jccl-settings definition.version="3.0"?>
<definition name="intersense_api"
            xsi:schemaLocation="http://www.vrjuggler.org/jccl/xsd/3.0/definition http://www.vrjuggler.org/jccl/xsd/3.0/definition"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://www.vrjuggler.org/jccl/xsd/3.0/definition">
   <definition_version version="1" label="IntersenseAPI">
      <help>Intersense Tracking Devices</help>
      <parent/>
      <category>/Devices</category>
      <property valuetype="string" variable="false" name="driver">
         <help>Each value is the full path to a driver DSO (.so or .dll, usually).  The path may make use of environment variables.  For example: ${VJ_BASE_DIR}/lib/gadgeteer/drivers/libPinchGlove.so.</help>
         <value label="DSO Path" defaultvalue=""/>
      </property>
      <property valuetype="string" variable="false" name="port">
         <help>Serial port the Flock is attached to</help>
         <value label="Port" defaultvalue="/dev/ttyd1"/>
      </property>
      <property valuetype="integer" variable="false" name="baud">
         <help>Serial port speed</help>
         <value label="Baud Rate" defaultvalue="115200"/>
      </property>
      <property valuetype="configelement" variable="true" name="position_filters">
         <help>This is a list of all the filters that are to be applied to the postional device data. The filters are applied in the order that they are specified in this configuration.</help>
         <value label="Position Filter"/>
         <allowed_type>position_transform_filter</allowed_type>
      </property>
      <property valuetype="configelement" variable="true" name="stations">
         <help>Settings for each Station.</help>
         <value label="Stations"/>
         <allowed_type>intersense_station</allowed_type>
      </property>
      <property valuetype="boolean" variable="false" name="verbose">
         <help>Enable output from the Intersense Driver</help>
         <value label="Verbose Enabled" defaultvalue="false"/>
      </property>
      <property valuetype="string" variable="false" name="script">
         <help>File path of script sent to the tracker on startup.</help>
         <value label="Script File" defaultvalue=""/>
      </property>
      <property valuetype="float" variable="false" name="min">
         <help>The lower bound for the range of valid values for the analog data.</help>
         <value label="Range Minimum" defaultvalue="0.0"/>
      </property>
      <property valuetype="float" variable="false" name="max">
         <help>The upper bound for the range of valid values for the analog data.</help>
         <value label="Range Maximum" defaultvalue="0.0"/>
      </property>
      <property valuetype="configelementpointer" variable="false" name="device_host">
         <help>Points to the machine that the device is physically connected to.</help>
         <value label="Host Node"/>
         <allowed_type>machine_specific</allowed_type>
      </property>
      <upgrade_transform/>
   </definition_version>
</definition>
