subsystem_cflags="@subsystem_cflags@"
subsystem_cxxflags="@subsystem_cxxflags@"
subsystem_libs="@subsystem_libs@"
vpr_libs="@vpr_libs@"

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
    cat <<EOF
Usage: $0 [OPTIONS] [LIBRARIES]
Options:
        [--prefix[=DIR]]
        [--exec-prefix[=DIR]]
        [--version]
        [--libs]
        [--cflags]
        [--cxxflags]
        [--subsystem]
Libraries:
        vpr
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

lib_gtk=yes

while test $# -gt 0; do
    case "$1" in
        -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
        *) optarg= ;;
    esac

    case $1 in
        --prefix=*)
            prefix=$optarg
            if test $exec_prefix_set = no ; then
                exec_prefix=$optarg
            fi
            ;;
        --prefix)
            echo_prefix=yes
            ;;
        --exec-prefix=*)
            exec_prefix=$optarg
            exec_prefix_set=yes
            ;;
        --exec-prefix)
            echo_exec_prefix=yes
            ;;
        --version)
            echo @VPR_MAJOR_VERSION@.@VPR_MINOR_VERSION@.@VPR_MICRO_VERSION@
            ;;
        --cflags)
            echo_cflags=yes
            ;;
        --cxxflags)
            echo_cxxflags=yes
            ;;
        --subsystem)
            echo @SUBSYSTEM@
            ;;
        --libs)
            echo_libs=yes
            ;;
        --static)
            echo_static=yes
            ;;
        gtk)
            lib_gtk=yes
            ;;
        *)
            usage 1 1>&2
            ;;
    esac
    shift
done

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
    echo @CFLAGS@ -I@includedir@ $subsystem_cflags
fi

if test "$echo_cxxflags" = "yes"; then
    echo @CXXFLAGS@ -I@includedir@ $subsystem_cxxflags
fi

if test "$echo_static" = "yes" ; then
    static_begin='@static_begin@'
    static_end='@static_end@'
fi

if test "$echo_libs" = "yes"; then
    my_subsystem_libs=
    ldflags='@vpr_ldflags@'
    for i in $subsystem_libs ; do
        if test $i != -L@libdir@ ; then
            if test -z "$my_subsystem_libs" ; then
                my_subsystem_libs="$i"
            else
                my_subsystem_libs="$my_subsystem_libs $i"
            fi
        fi
    done

    echo $ldflags $static_begin $vpr_libs $static_end $my_subsystem_libs
fi      
