# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/input
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .@OBJEXT@

srcdir		= @srcdir@

EXTRA_FLAGS	= @APP_EXTRA_FLAGS@
COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@ $(EXTRA_FLAGS)
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@ $(EXTRA_FLAGS)
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @APP_VJ_LIBS_BEGIN@ @APP_VJ_LIBS_BASIC@ @APP_VJ_LIBS_GL@ @APP_VJ_LIBS_END@ @APP_LIBS_BASIC@
VPATH		= @srcdir@:@srcdir@/../../Input/vjPosition

# These test programs require the following libraries to be linked:
#
#     -lGLU -lGL -lXext -lXmu -lX11 -lm
#
# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @APP_EXTRA_LIBS_BEGIN@ @APP_EXTRA_LIBS_BASIC@ @APP_EXTRA_LIBS_GL@ @APP_EXTRA_LIBS_END@

PROGS		= go go-ibox go-inputgroup go-logiclass aFlockTest vjFlockTest dummyTrackd

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: $(PROGS)

# ----------------
# aFlock test driver
# ----------------
aFlockTest: aFlockTest.@OBJEXT@ aFlock.@OBJEXT@
	$(LINK) -o $@ aFlockTest.@OBJEXT@ aFlock.@OBJEXT@ 

# ----------------
# vjFlock test driver
# ----------------
vjFlockTest: vjFlockTest.@OBJEXT@
	$(LINK) -o $@ vjFlockTest.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# trackd test driver
# ----------------
dummyTrackd: dummyTrackd.@OBJEXT@
	$(LINK) -o $@ dummyTrackd.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# aMotionStar test driver
# ----------------
aMotionStarTest: aMotionStarTest.@OBJEXT@			\
                 aMotionStar.@OBJEXT@
	$(LINK) -o $@ aMotionStarTest.@OBJEXT@			\
          aMotionStar.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# new
# ----------------
new: new.@OBJEXT@
	$(LINK) -o $@ new.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go
# ----------------
go: main.@OBJEXT@
	$(LINK) -o $@ main.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-ibox
# ----------------
go-ibox: main-ibox.@OBJEXT@
	$(LINK) -o $@ main-ibox.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-inputgroup
# ----------------
go-inputgroup: main-inputgroup.@OBJEXT@
	$(LINK) -o $@ main-inputgroup.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-logiclass
# ----------------
go-logiclass: main-logiclass.@OBJEXT@
	$(LINK) -o $@ main-logiclass.@OBJEXT@ $(VJ_LIBS) $(EXTRA_LIBS)

.cpp.@OBJEXT@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend $(PROGS) *.exe *.ilk *.@OBJEXT@ *core	\
          *.?db so_locations
	rm -rf ./ii_files
