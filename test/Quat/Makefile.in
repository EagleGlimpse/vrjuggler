.SUFFIXES	= .o .c .C

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJROOT_ABS	= @VJROOT_ABS@
VJ_SRCDIR	= @VJ_SRCDIR@/test/Quat
WORKDIR		= ${topdir}/test/Quat

CXX		= @CXX@
CXXCPP		= @CXXCPP@
CPPFLAGS	= @CPPFLAGS@
CXXFLAGS	= @CXXFLAGS@ ${OPTIMIZER}
DEFS		= @DEFS@
DEPENDFLAGS	= @DEPENDFLAGS@ -I${srcdir} @INCLUDES@	\
                  -I${VJROOT_ABS} -I${topdir}
DEPEND_EXTRAS	= @DEPEND_EXTRAS@ ${DEFS}
INCLUDES	= -I${srcdir} @INCLUDES@ -I${VJROOT} -I${topdir}
LDFLAGS		= @LDFLAGS@ -L/usr/lib${LIBBITSUF} -L/usr/lib
LIBS		= -L. -L${VJROOT_ABS}/lib -lJuggler @LIBS@
OBJDIR		= .
OPTIMIZER	= -g
VPATH		= @srcdir@

CXX_COMPILE	= ${CXX} ${DEFS} ${INCLUDES} ${CPPFLAGS} ${CXXFLAGS}

VJRELEASE	= @VJRELEASE@
LIBBITSUF	= @LIBBITSUF@
PLATFORM	= @PLATFORM@

OGLLIB		= @OGLLIB@
LIBOPENGL	= @LIBOPENGL@
OGLROOT		= @OGLROOT@
#PFROOT		= @PFROOT@
SYSTEM_OPENGL	= @SYSTEM_OPENGL@

DSOLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}		\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/libpfdb	\
                  -L${PFROOT}/lib${LIBBITSUF}

DDSOLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Debug	\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Debug/libpfdb \
                  -L${PFROOT}/lib${LIBBITSUF}

DBGLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/DebugStatic	\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/DebugStatic/libpfdb \
                  -L${PFROOT}/lib${LIBBITSUF}

OPTLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Static	\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Static/libpfdb \
                  -L${PFROOT}/lib${LIBBITSUF}

PF_LIBS		= ${DDSOLINKS} ${OGLLIB} ${SYSTEM_OPENGL}

# Search path.
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}


DEPEND_SRCS	= testQuat.C

# OBJECTS		= pfNav.o

@SET_MAKE@

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------

default: all

all: testQuat

testQuat: testQuat.o glquat.o
	${CXX_COMPILE} -o $@ testQuat.o glquat.o ${LDFLAGS} ${LIBS} ${PF_LIBS}

testQuat.o: 
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/testQuat.C

glquat.o:
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/glquat.c

.C.o:
	${CXX_COMPILE} -c -o $@ $<

depend: .depend_done

newdepend:
	rm .depend_done && ${MAKE} depend

# This target will allow the 'depend' target to be built only once.
.depend_done:
	cd ${srcdir} &&							\
          makedepend -f${WORKDIR}/Makefile ${DEPENDFLAGS} 		\
              -- ${DEPEND_EXTRAS} -- ${DEPEND_SRCS} &&			\
          touch ${WORKDIR}/.depend_done

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f .depend_done Makedepend pfNav ${OBJECTS} core so_locations

clobber: clean

