# -----------------------------------------------------------------------------
# Makefile.in for c2lib/test/input
# $Id$
# -----------------------------------------------------------------------------

.SUFFIXES	= .o .c .C

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJROOT_ABS	= @VJROOT_ABS@
VJ_SRCDIR	= @VJ_SRCDIR@/test/input
WORKDIR		= ${topdir}/test/input

CXX		= @CXX@
CXXCPP		= @CXXCPP@
CPPFLAGS	= @CPPFLAGS@
CXXFLAGS	= @CXXFLAGS@ ${OPTIMIZER}
DEFS		= @DEFS@
DEPENDFLAGS	= @DEPENDFLAGS@ -I${srcdir} @INCLUDES@	\
                  -I${VJROOT_ABS} -I${topdir}
DEPEND_EXTRAS	= @DEPEND_EXTRAS@ ${DEFS}
INCLUDES	= -I${srcdir} @INCLUDES@ -I${VJROOT} -I${topdir}
LDFLAGS		= @LDFLAGS@ -L/usr/lib${LIBBITSUF} -L/usr/lib
LIBS		= -L. -L${VJROOT_ABS}/lib -lJuggler @LIBS@
OBJDIR		= .
OPTIMIZER	= -g
VPATH		= @srcdir@

CXX_COMPILE	= ${CXX} ${DEFS} ${INCLUDES} ${CPPFLAGS} ${CXXFLAGS}

VJRELEASE	= @VJRELEASE@
LIBBITSUF	= @LIBBITSUF@
PLATFORM	= @PLATFORM@

OGLLIB		= @OGLLIB@
LIBOPENGL	= @LIBOPENGL@
#PFROOT		= @PFROOT@
SYSTEM_OPENGL	= @SYSTEM_OPENGL@

DSOLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}		\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/libpfdb	\
                  -L${PFROOT}/lib${LIBBITSUF}

DDSOLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Debug	\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Debug/libpfdb \
                  -L${PFROOT}/lib${LIBBITSUF}

DBGLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/DebugStatic	\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/DebugStatic/libpfdb \
                  -L${PFROOT}/lib${LIBBITSUF}

OPTLINKS	= -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Static	\
                  -L${PFROOT}/usr/lib${LIBBITSUF}/Performer/Static/libpfdb \
                  -L${PFROOT}/lib${LIBBITSUF}

PF_LIBS		= ${DDSOLINKS} ${OGLLIB} ${SYSTEM_OPENGL}

DEPEND_SRCS	= main.C main-ibox.C main-inputgroup.C main-logiclass.C

PROGS		= go go-ibox go-inputgroup go-logiclass
OBJECTS		= main.o main-ibox.o main-inputgroup.o main-logiclass.o

@SET_MAKE@

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------

default: all

all: ${PROGS}

new: new.o
	${CXX_COMPILE} -o $@ new.o ${LIBS} ${PF_LIBS} ${LDFLAGS}

go: main.o
	${CXX_COMPILE} -o $@ main.o ${LIBS} ${PF_LIBS} ${LDFLAGS}

go-ibox: main-ibox.o
	${CXX_COMPILE} -o $@ main-ibox.o ${LIBS} ${PF_LIBS} ${LDFLAGS}

go-inputgroup: main-inputgroup.o
	${CXX_COMPILE} -o $@ main-inputgroup.o ${LIBS} ${PF_LIBS} ${LDFLAGS}

go-logiclass: main-logiclass.o
	${CXX_COMPILE} -o $@ ${OBJECTS} ${LIBS} ${PF_LIBS} ${LDFLAGS}

new.o: new.C
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/new.C

main.o: main.C
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/main.C

main-ibox.o: main-ibox.C
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/main-ibox.C

main-inputgroup.o: main-inputgroup.C
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/main-inputgroup.C

main-logiclass.o: main-logiclass.C
	${CXX_COMPILE} -c -o $@ ${VJ_SRCDIR}/main-logiclass.C

.C.o:
	${CXX_COMPILE} -c -o $@ $<

depend: .depend_done

newdepend:
	rm .depend_done && ${MAKE} depend

# This target will allow the 'depend' target to be built only once.
.depend_done:
	cd ${srcdir} &&							\
          makedepend -f${WORKDIR}/Makefile ${DEPENDFLAGS} 		\
              -- ${DEPEND_EXTRAS} -- ${DEPEND_SRCS} &&			\
          touch ${WORKDIR}/.depend_done

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f .depend_done Makedepend ${PROGS} ${OBJECTS} core so_locations

clobber: clean

