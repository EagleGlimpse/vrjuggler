# -----------------------------------------------------------------------------
# Makefile.in for c2lib/Input/InputGroup
# $Id$
# -----------------------------------------------------------------------------

.SUFFIXES	= .o .c .C

SHELL		= /bin/sh

bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
includedir	= @includedir@/Input/InputManager
libdir		= @libdir@
libexecdir	= @libexecdir@
prefix		= @prefix@
sbindir		= @sbindir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJROOT_ABS	= @VJROOT_ABS@
VJ_SRCDIR	= @VJ_SRCDIR@/Input/InputManager
WORKDIR		= ${topdir}/Input/InputManager

# Include commom definitions
include @topdir@/Makefile.base


#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjInputManager.C

INPUT_GROUP_OBJECTS := $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

@SET_MAKE@

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------

default: all

all dbg opt dso ddso obj: ${INPUT_GROUP_OBJECTS}


install:
	${top_srcdir}/mkinstalldirs ${includedir}
	cp ${srcdir}/*.h ${includedir}

depend: .depend_done

newdepend:
	rm .depend_done && ${MAKE} depend

# This target will allow the 'depend' target to be built only once.
.depend_done:
	cd ${srcdir} &&							\
          makedepend -f${WORKDIR}/Makefile -p'$${OBJDIR}/'		\
              ${DEPENDFLAGS} -- ${DEPEND_EXTRAS} -- ${DEPEND_SRCS} &&	\
          touch ${WORKDIR}/.depend_done

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f .depend_done Makedepend ${INPUT_GROUP_OBJECTS} *.o core so_locations

